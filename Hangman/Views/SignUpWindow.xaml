<Window x:Class="Hangman.Views.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hangman.Views"
        mc:Ignorable="d"
        xmlns:ctx="clr-namespace:Hangman.ViewModels"
        Title="SignUpWindow" Height="600" Width="800" ResizeMode="CanMinimize" Icon="/Hangman;component/Assets/Icon.ico" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="7,7,7,7" Background="{TemplateBinding Background}">
                            <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding  Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"  Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding  VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontSize" Value="35"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <ctx:SignUpViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Hangman;component/Assets/BackgroundImage.jpg"/>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Hangman" FontFamily="MV Boli" Foreground="White" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20"/>
            <Label Grid.Row="1" Content="Choose a nickname and a picture" FontFamily="MV Boli" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Label Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30, 90" Content="YOUR NICKNAME" FontSize="20" FontFamily="MV Boli" Background="Transparent" Foreground="White"/>
            <TextBox Grid.Row="2" Width="300" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30" Background="Transparent" BorderBrush="White" FontSize="30" FontFamily="MV Boli" Foreground="White" VerticalContentAlignment="Center" x:Name="NicknameTextBox" Text="{Binding NameTextBox, UpdateSourceTrigger=PropertyChanged}"/>
            <Image x:Name="imageSignUp" Grid.Row="2" Source="{Binding ImageSource}" HorizontalAlignment="Right" Margin="110, 0" Height="250" VerticalAlignment="Top"/>
            <Button Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="➤" Style="{StaticResource ButtonStyle}" FontFamily="MV Boli" Margin="0, 150, 100, 10" Command="{Binding NextCommand}"/>
            <Button Grid.Row="2" Content="➤" HorizontalAlignment="Right" VerticalAlignment="Bottom" VerticalContentAlignment="Top" Style="{StaticResource ButtonStyle}" FontFamily="MV Boli" Margin="0,155,250, 15" RenderTransformOrigin="0.5,0.5" Command="{Binding PrevCommand}">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="180"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <WrapPanel Grid.Row="3">
                <Button Content="PLAY" Style="{StaticResource ButtonStyle}" FontFamily="MV Boli" Margin="150, 20, 20, 0" Command="{Binding PlayCommand}"/>
                <Button Content="BACK" Style="{StaticResource ButtonStyle}" FontFamily="MV Boli" Margin="150, 20, 20, 0" Command="{Binding BackCommand}"/>
            </WrapPanel>
        </Grid>
    </Grid>
</Window>
